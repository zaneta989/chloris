{% extends 'base.html.twig' %}

{% block body %}

    <h1>Details of the plant</h1><br>
    <div class="table-responsive">
        <table class="table table-hover">
            <tr>
                <th>Name</th>
                <td>{{ plant.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ plant.description }}</td>
            </tr>
            <tr>
                <th>Place</th>
                <td>{{ plant.place }}</td>
            </tr>
            <tr>
                <th>When</th>
                    {% if plant.isDaily==true %}
                <td>{{  plant.frequency }} times a day</td>
                {% else %}
                    <td>every {{ plant.frequency }} day</td>
                {% endif %}
            </tr>
            <tr>
                <th>Amount in liters</th>
                <td>{{ plant.amount }}</td>
            </tr>
            <tr>
                <th>Last day watered</th>
                <td>{{ plant.dateLastWatered.format('Y-m-d') }}</td>
            </tr>
            <tr>
                <th></th>
                <td>
                    <a class="btn btn-primary" href="{{ path('plantSetWatered', {'id': plant.id}) }}" name="watered">
                        <span class="glyphicon glyphicon-tint"></span>
                    </a>
                </td>
            </tr>
        </table>
    </div>

    <a class="btn btn-success" href="{{ path('plantEdit', {'id': plant.id}) }}">Edit</a>
    <a class="btn btn-default" href="{{ path('myPlants') }}">Back to My Plant</a>

{% endblock %}
{% trans_default_domain 'FOSUserBundle' %}

<form class="form-horizontal" action="{{ path('fos_user_resetting_send_email') }}" method="POST">
    <div class="form-group">
        <label for="username" class="col-sm-2 control-label">{{ 'resetting.request.username'|trans }}</label>
        <div class="col-sm-10">
            <input type="text" id="username" class="form-control" name="username" required/>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <input type="submit" class="btn btn-primary" value="{{ 'resetting.request.submit'|trans }}" />
        </div>
    </div>
</form>

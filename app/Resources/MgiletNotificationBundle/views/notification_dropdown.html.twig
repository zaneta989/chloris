<li class="btn-warning active">
    <a href="#" id="notificationDropdown"
       data-toggle="collapse"
       data-target="#notification-menu"
       aria-haspopup="true"
    >
        <span class="glyphicon glyphicon-bell"></span>
        <span id="notificationCount">
            {{ mgilet_unseen_notification_count() }}
        </span>
    </a>
    <div id="notification-menu"
         class="notification-menu collapse"
         aria-labelledby="notificationDropdown"
    >
        <ul class="well no-padding list-unstyled">
            <li style="padding: 10px;">
                <b class="text-muted">{{ 'notifications'|trans({},'MgiletNotificationBundle') }}</b>
                <a id="notification-MarkAllAsSeen" href="{{ path('notification_mark_all_as_seen') }}"
                   class="no-margin btn btn-xs pull-right">{{ 'mark_all_as_seen'|trans({},'MgiletNotificationBundle') }}
                </a>
            </li>
            <hr class="no-margin">
            <div class="scrollable-menu">
                <div class="list-group no-margin">
                    {% for notification in notifications %}
                        <li class="list-group-item notification">
                            {% if notification.seen %}
                            <div class="row-content seen">
                            {% else %}
                            <div class="row-content">
                                <a href="{{ path('notification_mark_as_seen', {'notification': notification.id}) }}"
                                   class="ajax-notification action-secondary text-muted btn btn-xs">x
                                </a>
                            {% endif %}
                            <a href="{{ notification.link }}">
                                <h4><b>{{ notification.subject }}</b></h4>
                                <p class="list-group-item-text">{{ notification.message }}</p>
                                <span class="highlighted-items"><i>{{ notification.date|date('H:i:s - d/m/Y') }}</i></span>
                            </a>
                            </div>
                        </li>
                    {% endfor %}
                </div>
                {% if notifications|length < 1 %}
                    <div class="well-lg text-muted text-center">
                        <b>{{ 'no_new_notification'|trans({},'MgiletNotificationBundle') }}</b></div>
                {% endif %}
            </div>
            <li class="text-center no-margin">
                <a class="no-margin btn btn-sm btn-block"
                   href="{{ path('notifications_list') }}">{{ 'all_notifications'|trans({},'MgiletNotificationBundle') }}
                </a>
            </li>
        </ul>
    </div>
</li>
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/mgilet_notification.css') }}">
{% endblock %}
{% block javascripts %}
    <script type="application/javascript" src="{{ asset('bundles/mgiletnotification/js/ajax-notification.js') }}"></script>
{% endblock %}
